{
  "name": "teamflow-local-backend",
  "version": "1.0.0",
  "description": "Local development backend for TeamFlow (Express wrapping compiled Lambdas)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:backend": "npm --prefix .. run build",
    "watch:backend": "npm --prefix .. run watch",
    "dev:server": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev": "npm run build:backend && npm run dev:server",
    "dev:watch": "concurrently -k -r \"npm run watch:backend\" \"npm run dev:server\"",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "keywords": [
    "teamflow",
    "local",
    "development",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^18.0.0",
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
